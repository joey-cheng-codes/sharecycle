generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int          @id @default(autoincrement())
  username        String       @unique
  nickname        String?
  firstName       String
  lastName        String
  email           String       @unique
  password        String
  profileImageUrl String?
  Friendship      Friendship[]
  items           Item[]
}

model Item {
  id               Int        @id @default(autoincrement())
  createDate       DateTime   @default(now())
  itemName         String
  description      String
  rentCount        Int        @default(0)
  loanDurationDays Int
  imageUrl         String
  userId           Int
  user             User       @relation(fields: [userId], references: [id])
  Category         Category[] @relation("ItemToCategory")
}

model Category {
  id   Int    @id @default(autoincrement())
  name String
  Item Item[] @relation("ItemToCategory")
}

model Friendship {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  isActive  Boolean
  friendId  Int
  userId    Int
  status    String
  User      User     @relation(fields: [userId], references: [id])
}
