generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String   @id @default(uuid())
  username        String   @unique
  nickname        String?
  firstName       String
  lastName        String
  email           String   @unique
  password        String
  profileImageUrl String?
  friendIds       String[]
  items           Item[]
}

model Item {
  id               String     @id @default(uuid())
  createDate       DateTime   @default(now())
  itemName         String
  description      String
  rentCount        Int        @default(0)
  loanDurationDays Int
  imageUrl         String
  userId           String
  user             User       @relation(fields: [userId], references: [id])
  Category         Category[] @relation("ItemToCategory")
}

model Category {
  id   String @id @default(uuid())
  name String
  Item Item[] @relation("ItemToCategory")
}

model FriendshipRequest {
  id         String   @id @default(uuid())
  createdAt  DateTime @default(now())
  senderId   String
  receiverId String
  status     String // e.g., "pending", "accepted", "rejected"

  @@unique([senderId, receiverId], name: "senderId_receiverId")
}

model Friendship {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  userId    String
  friendsId String[]
}
