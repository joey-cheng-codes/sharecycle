{
  "compilerOptions": {
    "target": "es2016",
    "lib": [
      "es6",
      "dom",
    ],
    "module": "commonjs",
    "rootDir": "src",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "build",
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "jsx": "react",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
  },
  "include": [
    "postcss.config.ts",
    "src/**/**/*.ts",
    "src/**/**/*.tsx",
    "server/**/*.ts",
    "server/**/*.tsx",
    "index.d.ts"
  ],
  "types": [
    "node",
    "jest",
    "@testing-library/jest-dom"
  ],
}