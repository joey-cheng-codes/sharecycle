{
  "compilerOptions": {
    "target": "es2016",
    "lib": [
      "es6"
    ],
    "module": "commonjs",
    "rootDir": "src",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "build",
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "jsx": "react",
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": [
    "postcss.config.ts",
    "src/**/**/*.ts",
    "src/**/**/*.tsx",
    "server/**/*.ts",
    "server/**/*.tsx",
    "index.d.ts"
  ]
}